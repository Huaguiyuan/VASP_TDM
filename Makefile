#-------------------------------------------------------------------------------
# defaults
#-------------------------------------------------------------------------------
FC= ifort -assume byterecl
FC= gfortran
FFLAGS= -g -O2
MAKE = make

#-------------------------------------------------------------------------------
# Src
#-------------------------------------------------------------------------------

SRC= prec.f90 lattice.f90 info.f90 wave.f90 option.f90 gvector.f90 \
	 tdm.f90 main.f90

OBJ = $(SRC:.f90=.o)
EXE = vasptdm

#-------------------------------------------------------------------------------
# Suffix rules
#-------------------------------------------------------------------------------
.SUFFIXES: .o .f90
.f90.o:
	$(FC) $(FFLAGS) -c $<

#-------------------------------------------------------------------------------
# Targets
#-------------------------------------------------------------------------------
tdm:	$(OBJ)
	$(FC) $(FFLAGS) -o $(EXE) $(OBJ) $(SPGLIB)  

clean:
	rm -f *.mod *.a
	rm -f $(OBJ) $(EXE)
tar:
	tar -czvf tdm.tgz *.f90 Makefile *.py
tag:
	ctags *.f90
